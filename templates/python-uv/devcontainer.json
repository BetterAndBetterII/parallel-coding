{
  "name": "workspace",
  "dockerComposeFile": "compose.yaml",
  "service": "dev",
  "workspaceFolder": "/workspaces/workspace",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "postCreateCommand": "bash -lc 'if [ -f pyproject.toml ]; then (uv sync --frozen || uv sync); fi'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}

